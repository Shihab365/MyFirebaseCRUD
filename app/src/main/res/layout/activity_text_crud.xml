<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/text_bg_color"
    tools:context=".TextCRUDActivity">

    <LinearLayout
        android:gravity="center|bottom"
        android:layout_weight="1.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Text CRUD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/text_btn_insert_id"
                android:layout_margin="20dp"
                android:text="INSERT"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:background="#FFC107"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/text_btn_rSingle_id"
                android:layout_margin="20dp"
                android:text="READ SINGLE"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:background="#CDDC39"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/text_btn_rList_id"
                android:layout_margin="20dp"
                android:text="READ LIST"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:background="#FF9800"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/text_btn_update_id"
                android:layout_margin="20dp"
                android:text="UPDATE"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:background="#FFEB3B"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/text_btn_delete_id"
                android:layout_margin="20dp"
                android:text="DELETE"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:background="#8BC34A"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>